<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunButtonsStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/fun_buttons_shape</item>
    </style>

    <style name="NumButtonsStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@drawable/num_buttons_shape</item>
    </style>

    <style name="EqualButtonStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/equal_button_shape</item>
    </style>

</resources>
